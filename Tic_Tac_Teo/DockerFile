# Use official Maven image to build the app
FROM maven:3.9-eclipse-temurin-17 AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the pom.xml and download dependencies
COPY pom.xml .
RUN mvn dependency:go-offline

# Copy the source code
COPY src ./src

# Build the app using Maven
RUN mvn clean package -DskipTests

# Use official OpenJDK image to run the app
FROM eclipse-temurin:17-jre-alpine

# Set the working directory inside the container
WORKDIR /app

# Copy the JAR file from the build stage
COPY --from=build /app/target/Tic_Tac_Teo-0.0.1-SNAPSHOT.jar Tic_Tac_Teo.jar

# Expose the port the app runs on (default Spring Boot port is 8080)
EXPOSE 8080

# Command to run the application
ENTRYPOINT ["java", "-jar", "Tic_Tac_Teo.jar"]
